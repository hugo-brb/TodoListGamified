# Global
NODE_ENV=development
PORT=3000

# MongoDB Configuration
# Choisir selon votre mode d'exécution:

# MODE 1: docker-compose (app + MongoDB en Docker)
# Utiliser 'mongo' comme nom d'hôte
MONGO_HOST=mongo

# MODE 2: Développement local (app en local, MongoDB en Docker)
# Utiliser 'localhost' comme nom d'hôte
# MONGO_HOST=localhost

MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=example
MONGO_INITDB_DATABASE=todo

# Auto-seed: remplir automatiquement la base avec des données de test au démarrage
# Mettre à true pour faciliter les tests
AUTO_SEED=true

# JWT Configuration
JWT_SECRET=secret-key-change-in-production

# Debug mode (optionnel)
DEBUG=false
